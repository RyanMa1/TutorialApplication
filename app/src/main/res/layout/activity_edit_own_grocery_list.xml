<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editOwnGroceryList">

    <ListView
        android:id="@+id/groceryListView"
        android:layout_width="340dp"
        android:layout_height="529dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp" />

    <EditText
        android:id="@+id/addEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groceryListView"
        android:layout_alignStart="@+id/groceryListView"
        android:layout_alignLeft="@+id/groceryListView"
        android:layout_alignEnd="@+id/groceryListView"
        android:layout_alignRight="@+id/groceryListView"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="129dp"
        android:layout_marginRight="129dp"
        android:layout_marginBottom="94dp"
        android:ems="10"
        android:hint="@string/user_enter_textview"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/addEditText"
        android:layout_alignLeft="@+id/addEditText"
        android:layout_alignEnd="@+id/groceryListView"
        android:layout_alignRight="@+id/groceryListView"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="239dp"
        android:layout_marginLeft="239dp"
        android:layout_marginTop="592dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="91dp"
        android:text="@string/edit_addition_button" />
</RelativeLayout>